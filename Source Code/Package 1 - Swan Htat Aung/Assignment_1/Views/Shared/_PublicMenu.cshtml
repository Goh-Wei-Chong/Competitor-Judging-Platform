<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/home2.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3" style="z-index:100">
            <div class="container">
                <a class="navbar-brand" style="background:none;" href="~/Home/Index">
                    <img src="~/images/logo.png"
                         style="width: 70px; border-radius: 260px;" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white hover-red" style="margin-right: 15px" href="~/InterestGroup/Index">INTEREST GROUPS</a>
                        </li>
                        <li class="nav-item dropdown" style="margin-right: 15px">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                AWARD DIRECTORY
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="~/Home/ViewCompetitors">VIEW COMPETITORS WORKS</a>
                                <a class="dropdown-item" href="~/Home/RankedCompetitors">VIEW RANKING OF COMPETITORS</a>
                                <a class="dropdown-item" href="~/Home/ViewComments">VIEW & POST COMMENTS</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="~/Home/VoteCompetitors">VOTE FOR COMPETITORS</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white hover-red" style="margin-right: 15px" href="~/Home/Login">LOG IN</a>
                        </li>
                        <li class="nav-item stay-red">
                            <a class="nav-link text-white" href="~/Home/SignUp">SIGN UP</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
